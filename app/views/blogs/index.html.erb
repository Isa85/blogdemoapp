<p id="notice"><%= notice %></p>

<div class="container-fluid blog">
  
  <div class="row">
    <% @blogs.each do |blog| %>
    <div class="col-md-6 col-lg-4">
      <div class="thumbnail">
        <%= image_tag(blog.image_url, class: "img-responsive") %>      
        <div class="caption">
          <h3><%= blog.title %></h3>
          <p><%= blog.content %></p>
          <p>erstellt am: <%= blog.published %></p>
          <a href="#" class="btn btn-default" role="button">zum Artikel</a></p>
          <%= link_to 'Neuer Artikel', new_blog_path %>
          <%= link_to 'Show', blog %>
          <%= link_to 'Edit', edit_blog_path(blog) %>
          <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %> 
        </div>
      </div>    
    </div>  
  </div>
</div>


<% end %>