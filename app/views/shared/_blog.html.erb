<div class="col-sm-6 col-md-4">
  <div class="row">		
			<div class="thumbnail">
  			<% if blog.image_url.present? %>
    		<%= image_tag(blog.image_url, class: "img-responsive img-rounded carousel-image") %>
    		<% end %>     
  			<div class="caption">
    			<h3><%= blog.title %></h3>
    			<p><h4><%= blog.content %></h4></p>
    			<p><h6>erstellt am: <%= blog.published %></h6></p>
    			<a href="#" class="btn btn-default" role="button">zum Artikel</a></p>
    			<%= link_to 'Neuer Artikel', new_blog_path %>
    			<%= link_to 'zeigen', blog %>
    			<%= link_to 'ändern', edit_blog_path(blog) %>
    			<%= link_to 'löschen', blog, method: :delete, data: { confirm: 'Are you sure?' } %> 
  			</div>
			</div>
		</div>
	</div>

